{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.prism.desktop",
  "productName": "Prism",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm --dir ../prism-ui dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm --dir ../prism-ui build && pnpm --dir ../prism-ui export",
    "frontendDist": "../prism-ui/out"
  },
  "app": {
    "windows": [
      {
        "title": "Prism",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
